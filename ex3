create table categories (
c_id int not null,
category varchar (25),
primary key (c_id));


insert into categories
     values (1, 'romance'),
     (2, 'thriller'),
     (3, 'suspense'),
     (4, 'comedy');
Query OK, 4 rows affected (0.07 sec)
Records: 4  Duplicates: 0  Warnings: 0

mysql> select * from categories;
