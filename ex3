| c_id | category |
+------+----------+
|    1 | romance  |
|    2 | thriller |
|    3 | suspense |
|    4 | comedy   |
+------+----------+
4 rows in set (0.00 sec)






create table articles (
a_id int not null,
u_id int not null,
name varchar(25),
category varchar(25),
primary key (a_id));

 insert into articles
    values (1, 1, 'abc', 'romance'),
    (2, 1, 'xyz', 'thriller'),
    (3, 2, 'def', 'suspense'),
    (4, 3, 'wxy', 'suspense'),
    (5, 4, 'fgh', 'comedy');
Query OK, 5 rows affected (0.06 sec)
Records: 5  Duplicates: 0  Warnings: 0

mysql> select * from articles;
+------+------+------+----------+
| a_id | u_id | name | category |
+------+------+------+----------+
|    1 |    1 | abc  | romance  |
|    2 |    1 | xyz  | thriller |
|    3 |    2 | def  | suspense |
|    4 |    3 | wxy  | suspense |
|    5 |    4 | fgh  | comedy   |
+------+------+------+----------+
5 rows in set (0.00 sec)




create table users (
u_id int not null,
username varchar(25),
primary key (u_id));


 insert into users
    values (1, 'harsh'),
    (2, 'akshay'),
    (3, 'kuldeep'),
     (4, 'nishant');
Query OK, 4 rows affected (0.06 sec)
Records: 4  Duplicates: 0  Warnings: 0

